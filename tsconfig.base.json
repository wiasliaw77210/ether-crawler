{
  "compilerOptions": {
    // target/module options
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "lib": ["es2017", "esnext.asynciterable"],
    "baseUrl": ".",
    // rule options
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true
  }
}
